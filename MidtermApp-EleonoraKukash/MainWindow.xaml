<Window x:Class="MidtermApp_EleonoraKukash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidtermApp_EleonoraKukash"
        mc:Ignorable="d"
        Title="Main Window-Eleonora Kukash" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <Label Content="Welcome to Eleonora's store! Please choose one of the following options:" HorizontalAlignment="Center" Margin="15"/>
        <Button Content="Enter Store" x:Name="btnStoreWindow" Width="188" Height="40" HorizontalAlignment="Center" Margin="15" Click="btnStoreWindow_Click"/>
        <Button Content="Manage application" x:Name="btnManageApp" Width="188" Height="40" HorizontalAlignment="Center" Margin="15" Click="btnManageApp_Click"/>
    </StackPanel>
</Window>